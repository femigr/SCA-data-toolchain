pipeline {
    agent any 
    parameters {
        string(name: 'REPO_URL', defaultValue: 'https://github.com/torvalds/linux.git', description: 'Https clone link');
        string(name: 'REVISION', defaultValue: '', description: 'Specific revision to checkout (for example a commit hash)')
    }
    stages {
        stage('Get Repository') { 
            steps {
                git url: env.REPO_URL, changelog: false
                script{
                    if(env.REVISION != ''){
                        sh 'git checkout ' + env.REVISION
                    }
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}